<%= turbo_frame_tag @review do %>
  <%= simple_form_for @review, remote: true, html: { class: 'p-2 border border-2 border-dark rounded' } do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, :collection => [1, 2, 3, 4, 5] %>
    <%= f.submit "Submit review", class: "btn btn-warning" %>
  <% end %>
<% end %>