<h1>Restaurants</h1>

<table id="restaurants">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @restaurants %>
  </tbody>
</table>

<%= link_to "Create new restaurant", new_restaurant_path, data: { turbo_frame: "new-restaurant" } %>

<%= turbo_frame_tag id="new-restaurant" %>
