<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Category</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to "view", restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create new restaurant", new_restaurant_path %>

<%= turbo_frame_tag id="new-restaurant", src: new_restaurant_path %>
